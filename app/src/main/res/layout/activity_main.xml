<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4b5ba"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <ImageView
        android:id="@+id/image_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/text_iam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="53dp"
        android:text="I am"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="50sp"
        tools:text="I am" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/text_iam"
        android:layout_marginEnd="86dp"
        android:text="poor"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:text="poor" />

</RelativeLayout>
